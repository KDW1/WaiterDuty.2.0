                            <tr><th>1st Dinner</th><th><%= iterateShifts(data.dinners.firstDinner) %></th></tr>
                            <tr><th>2nd Dinner</th><th><%= iterateShifts(data.dinners.secondDinner) %></th></tr>
                        <% } %> 
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <th>Shift</th>
                            <th>Cadets on Duty</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Wednesday</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="wednesdayTable">
                        <% if(locals.roster) { %> 
                            <% data = roster.wednesday %> 
                            <% function iterateShifts(arr) {
                                let terms = [];
                                terms = arr.map((data) => {
                                    return data.assignedPerson;
                                })
                                return terms.join(", ");
                            } %> 
                            <tr><th>Breakfast</th><th><%= iterateShifts(data.breakfast) %></th></tr>
                            <tr><th>Wednesday</th><th><%= iterateShifts(data.wednesday) %></th></tr>
                            <tr><th>1st Dinner</th><th><%= iterateShifts(data.dinners.firstDinner) %></th></tr>
                            <tr><th>2nd Dinner</th><th><%= iterateShifts(data.dinners.secondDinner) %></th></tr>
                        <% } %> 
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <th>Shift</th>
                            <th>Cadets on Duty</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Thursday</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="thursdayTable">
                        <% if(locals.roster) { %> 
                            <% data = roster.thursday %> 
                            <% function iterateShifts(arr) {
                                let terms = [];
                                terms = arr.map((data) => {
                                    return data.assignedPerson;
