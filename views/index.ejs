<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello Bulma!</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/eefa1d8796.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="bg-dark">
        <div class="container pb-2">
            <h1 class="h1 is-size-1 text-white pt-2">
                Waiter Duty Program
            </h1>
            <p class="subtitle is-size-5 text-white pb-4">
                A website that makes organizing <strong class="has-text-white">Waiter Duty Rosters</strong> easier!
            </p>
                <% locals.errorMsg.forEach((data) => { %>
                    <p class="subtitle is-size-5 text-white">
                        <%= data %> 
                    </p>
                <% }) %> 
        </div>
    </div>
    <div class="container">
        <div class="row">
            <h1 class="title col-3">
                Cadets:
            </h1>
        </div>
        <div class="row">
            <div class="col-1">
                <button class="btn btn-dark mt-2" onclick="toggleDay('monday')">
                    <span class="text-white is-size-4">
                        Monday
                    </span>
                </button>
            </div>
            <div class="col-1">
                <button class="btn btn-dark mt-2" onclick="toggleDay('tuesday')">
                    <span class="text-white is-size-4">
                        Tuesday
                    </span>
                </button>
            </div>
            <div class="col-1">
                <button class="btn btn-dark mt-2" onclick="toggleDay('thursday')">
                    <span class="text-white is-size-4">
                        Thursday
                    </span>
                </button>
            </div>
            <div class="col-1">
                <button class="btn btn-dark mt-2" onclick="toggleDay('friday')">
                    <span class="text-white is-size-4">
                        Friday
                    </span>
                </button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-10">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Cadet Name</th>
                            <th>Lunches</th>
                            <th>Monday</th>
                            <th>Tuesday</th>
                            <th>Thursday</th>
                            <th>Friday</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <% if(locals.cadetList) { %>
                            <% locals.cadetList.forEach((cadet) => {%>
                                <tr>
                                    <th class = "<%= cadet.cadetName %>"><%= cadet.cadetName %></th>
                                    <th>|</th>
                                    <th class = "monday <%= cadet.parsedLunchTimes[0] %>"><%= cadet.parsedLunchTimes[0] %></th>
                                    <th class = "tuesday <%= cadet.parsedLunchTimes[1] %>"><%= cadet.parsedLunchTimes[1] %></th>
                                    <th class = "thursday <%= cadet.parsedLunchTimes[2] %>"><%= cadet.parsedLunchTimes[2] %></th>
                                    <th class = "friday <%= cadet.parsedLunchTimes[3] %>"><%= cadet.parsedLunchTimes[3] %></th>
                                    <th><a href="/deleteCadet?cadetName=<%= cadet.cadetName %>"><button class='btn btn-sm rounded-circle px-2 btn-danger delete-cell'><span class='icon'><i class='fa-solid fa-lg fa-xmark'></i></span></button></a></th>
                                </tr>
                            <% })%> 
                        <% } %>  
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <th>Example Cadet</th>
                            <th>|</th>
                            <th>1st</th>
                            <th>2nd</th>
                            <th>2nd</th>
                            <th>3rd</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col">
                <button class="btn btn-primary rounded-circle" data-toggle="modal" data-target="#cadet-modal">
                    <span class="icon">
                        <i class="fa-solid fa-plus"></i>
                    </span>
                </button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Monday</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="mondayTable">
                        <% if(locals.roster) { %> 
                            <% data = roster.monday %> 
                            <% function iterateShifts(arr) {
                                let terms = [];
                                terms = arr.map((data) => {
                                    return data.assignedPerson;
                                })
                                return terms.join(", ");
                            } %> 
                            <tr><th>Breakfast</th><th><%= iterateShifts(data.breakfast) %></th></tr>
                            <tr><th>1st Lunch</th><th><%= iterateShifts(data.lunches.firstLunch) %></th></tr>
                            <tr><th>2nd Lunch</th><th><%= iterateShifts(data.lunches.secondLunch) %></th></tr>
                            <tr><th>3rd Lunch</th><th><%= iterateShifts(data.lunches.thirdLunch) %></th></tr>
                            <tr><th>1st Dinner</th><th><%= iterateShifts(data.dinners.firstDinner) %></th></tr>
                            <tr><th>2nd Dinner</th><th><%= iterateShifts(data.dinners.secondDinner) %></th></tr>
                        <% } %> 
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <th>Shift</th>
                            <th>Cadets on Duty</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <table class="table table-hover">
